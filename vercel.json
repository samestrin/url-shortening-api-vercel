{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  {
    "redirects": [
      { "source": "/", "destination": "https://frwrd.ing", "permanent": true }
    ]
  },
  "routes": [
    {
      "src": "/index.html",
      "dest": "/"
    },
    {
      "src": "/count",
      "dest": "/api/count.js"
    },
    {
      "src": "/latest",
      "dest": "/api/latest.js"
    },
    {
      "src": "/shorten",
      "dest": "/api/shorten.js"
    },
    {
      "src": "/version",
      "dest": "/api/version.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/redirect.js"
    }
  ]
}
